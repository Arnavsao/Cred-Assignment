/* Theme Variables */
:root[data-theme="light"] {
  --primary-color: #5BC5A7;
  --primary-dark: #48A68C;
  --primary-light: #E8F5F1;
  --bg-primary: #F6F7FB;
  --bg-secondary: #FFFFFF;
  --card-bg: #FFFFFF;
  --text-primary: #1A1A1A;
  --text-secondary: #666666;
  --text-tertiary: #999999;
  --border-color: #E0E0E0;
  --hover-bg: #F5F5F5;
  --success-color: #4CAF50;
  --error-color: #FF6B6B;
  --warning-color: #FFA726;
  --card-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
}

:root[data-theme="dark"] {
  --primary-color: #5BC5A7;
  --primary-dark: #48A68C;
  --primary-light: #1C3932;
  --bg-primary: #1A1A1A;
  --bg-secondary: #242424;
  --card-bg: #2A2A2A;
  --text-primary: #FFFFFF;
  --text-secondary: #B0B0B0;
  --text-tertiary: #808080;
  --border-color: #404040;
  --hover-bg: #333333;
  --success-color: #4CAF50;
  --error-color: #FF6B6B;
  --warning-color: #FFA726;
  --card-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
}

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen',
    'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  background: var(--bg-primary);
  color: var(--text-primary);
  transition: background-color 0.3s ease, color 0.3s ease;
}

.App {
  min-height: 100vh;
  background: var(--bg-primary);
}

/* User Selection Page */
.user-selection {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 100vh;
  padding: 20px;
  background: var(--bg-primary);
}

.user-selection-container {
  background: var(--card-bg);
  padding: 40px;
  border-radius: 12px;
  box-shadow: var(--card-shadow);
  max-width: 600px;
  width: 100%;
}

.user-selection h1 {
  text-align: center;
  color: var(--text-primary);
  margin-bottom: 30px;
  font-size: 32px;
}

.user-selection h2 {
  color: var(--text-secondary);
  margin-bottom: 20px;
  font-size: 20px;
}

.user-list {
  display: grid;
  gap: 15px;
  margin-bottom: 20px;
}

.user-card {
  background: var(--bg-primary);
  border: 2px solid var(--border-color);
  padding: 20px;
  border-radius: 12px;
  cursor: pointer;
  transition: all 0.3s ease;
  text-align: left;
  color: var(--text-primary);
}

.user-card:hover {
  background: var(--primary-light);
  border-color: var(--primary-color);
  transform: translateY(-2px);
  box-shadow: var(--card-shadow);
}

.user-card h3 {
  color: var(--text-primary);
  margin-bottom: 5px;
  font-size: 18px;
}

.user-card p {
  color: var(--text-secondary);
  font-size: 14px;
}

.create-user-btn {
  width: 100%;
  padding: 15px;
  background: var(--primary-color);
  color: white;
  border: none;
  border-radius: 8px;
  font-size: 16px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
}

.create-user-btn:hover {
  background: var(--primary-dark);
  transform: translateY(-2px);
}

/* Dashboard */
.dashboard {
  min-height: 100vh;
  background: var(--bg-primary);
}

.dashboard-content {
  display: flex;
  min-height: calc(100vh - 64px);
}

.dashboard-main {
  flex: 1;
  padding: 24px;
  overflow-y: auto;
  background: var(--bg-primary);
}

.selected-group-info {
  background: var(--card-bg);
  padding: 20px;
  border-radius: 12px;
  margin-bottom: 24px;
  box-shadow: var(--card-shadow);
  border-left: 4px solid var(--primary-color);
}

.selected-group-info h2 {
  color: var(--text-primary);
  margin-bottom: 8px;
  font-size: 22px;
}

.selected-group-info p {
  color: var(--text-secondary);
  font-size: 14px;
}

/* Forms */
.form-group {
  margin-bottom: 20px;
}

.form-group label {
  display: block;
  margin-bottom: 8px;
  color: var(--text-primary);
  font-weight: 600;
  font-size: 14px;
}

.form-group input,
.form-group textarea,
.form-group select {
  width: 100%;
  padding: 12px;
  border: 2px solid var(--border-color);
  border-radius: 8px;
  font-size: 14px;
  background: var(--bg-primary);
  color: var(--text-primary);
  transition: border-color 0.3s ease;
}

.form-group input:focus,
.form-group textarea:focus,
.form-group select:focus {
  outline: none;
  border-color: var(--primary-color);
}

button[type="submit"] {
  background: var(--primary-color);
  color: white;
  padding: 12px 30px;
  border: none;
  border-radius: 8px;
  cursor: pointer;
  font-size: 16px;
  font-weight: 600;
  transition: all 0.3s ease;
}

button[type="submit"]:hover:not(:disabled) {
  background: var(--primary-dark);
  transform: translateY(-2px);
}

button[type="submit"]:disabled {
  background: var(--text-tertiary);
  cursor: not-allowed;
  transform: none;
}

/* Group Components */
.group-list,
.create-group,
.add-expense,
.expense-list,
.balance-sheet {
  background: var(--card-bg);
  padding: 24px;
  border-radius: 12px;
  box-shadow: var(--card-shadow);
}

.group-list h2,
.create-group h2,
.add-expense h2,
.expense-list h2,
.balance-sheet h2 {
  color: var(--text-primary);
  margin-bottom: 20px;
  font-size: 24px;
}

.groups-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
  gap: 20px;
}

.group-card {
  background: var(--bg-primary);
  padding: 20px;
  border-radius: 12px;
  cursor: pointer;
  transition: all 0.3s ease;
  border: 2px solid var(--border-color);
}

.group-card:hover {
  transform: translateY(-4px);
  box-shadow: var(--card-shadow);
  border-color: var(--primary-color);
}

.group-card h3 {
  color: var(--text-primary);
  margin-bottom: 10px;
  font-size: 18px;
}

.group-card p {
  color: var(--text-secondary);
  font-size: 14px;
  margin-bottom: 15px;
  line-height: 1.5;
}

.group-info {
  display: flex;
  justify-content: space-between;
  color: var(--text-tertiary);
  font-size: 13px;
}

/* Member List */
.member-list {
  display: flex;
  flex-direction: column;
  gap: 10px;
  max-height: 300px;
  overflow-y: auto;
  padding: 12px;
  background: var(--bg-primary);
  border-radius: 8px;
  border: 2px solid var(--border-color);
}

.member-checkbox {
  display: flex;
  align-items: center;
  gap: 10px;
  cursor: pointer;
  padding: 8px;
  border-radius: 6px;
  transition: background 0.3s ease;
  color: var(--text-primary);
}

.member-checkbox:hover {
  background: var(--hover-bg);
}

.member-checkbox input[type="checkbox"] {
  width: 18px;
  height: 18px;
  cursor: pointer;
}

/* Expense Components */
.expenses {
  display: grid;
  gap: 16px;
}

.expense-card {
  background: var(--bg-primary);
  padding: 20px;
  border-radius: 12px;
  border-left: 4px solid var(--primary-color);
  transition: all 0.3s ease;
}

.expense-card:hover {
  transform: translateX(4px);
  box-shadow: var(--card-shadow);
}

.expense-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15px;
}

.expense-header h3 {
  color: var(--text-primary);
  font-size: 18px;
}

.expense-amount {
  font-size: 20px;
  font-weight: 700;
  color: var(--success-color);
}

.expense-details {
  margin-bottom: 15px;
  color: var(--text-secondary);
}

.expense-details p {
  margin: 5px 0;
  font-size: 14px;
}

.expense-details strong {
  color: var(--text-primary);
}

.expense-splits h4 {
  color: var(--text-primary);
  margin-bottom: 10px;
  font-size: 14px;
  font-weight: 600;
}

.split-item {
  display: flex;
  justify-content: space-between;
  padding: 8px 0;
  color: var(--text-secondary);
  font-size: 14px;
}

.delete-btn {
  background: var(--error-color);
  color: white;
  padding: 8px 16px;
  border: none;
  border-radius: 6px;
  cursor: pointer;
  margin-top: 10px;
  font-weight: 600;
  transition: all 0.3s ease;
}

.delete-btn:hover {
  background: #E85555;
  transform: translateY(-2px);
}

/* Splits Section */
.splits-section {
  background: var(--bg-primary);
  padding: 16px;
  border-radius: 8px;
  margin-bottom: 20px;
  border: 2px solid var(--border-color);
}

.splits-section h3 {
  color: var(--text-primary);
  margin-bottom: 15px;
  font-size: 16px;
}

.split-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12px;
}

.split-row span {
  color: var(--text-primary);
  font-weight: 500;
  font-size: 14px;
}

.split-row input {
  width: 150px;
  padding: 8px;
  border: 2px solid var(--border-color);
  border-radius: 6px;
  background: var(--bg-secondary);
  color: var(--text-primary);
}

/* Balance Sheet */
.balance-summary {
  background: var(--bg-primary);
  padding: 24px;
  border-radius: 12px;
  margin-bottom: 30px;
  border: 2px solid var(--border-color);
}

.net-balance {
  text-align: center;
  padding: 24px;
  margin-bottom: 20px;
  border-radius: 12px;
}

.net-balance.positive {
  background: rgba(76, 175, 80, 0.1);
  border: 2px solid var(--success-color);
}

.net-balance.negative {
  background: rgba(255, 107, 107, 0.1);
  border: 2px solid var(--error-color);
}

.net-balance h3 {
  color: var(--text-secondary);
  margin-bottom: 10px;
  font-size: 14px;
  font-weight: 600;
  text-transform: uppercase;
}

.net-balance .amount {
  font-size: 36px;
  font-weight: 700;
}

.balance-detail {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20px;
  text-align: center;
}

.balance-detail div {
  padding: 16px;
  background: var(--bg-secondary);
  border-radius: 8px;
}

.balance-detail p:first-child {
  color: var(--text-secondary);
  font-size: 14px;
  margin-bottom: 8px;
}

.balance-section {
  margin-bottom: 30px;
}

.balance-section h3 {
  color: var(--text-primary);
  margin-bottom: 15px;
  padding-bottom: 10px;
  border-bottom: 2px solid var(--border-color);
  font-size: 18px;
}

.balance-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16px;
  background: var(--bg-primary);
  border-radius: 8px;
  margin-bottom: 10px;
  border: 1px solid var(--border-color);
}

.balance-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex: 1;
  gap: 16px;
}

.user-name {
  color: var(--text-primary);
  font-weight: 600;
  font-size: 15px;
}

.amount {
  font-weight: 700;
  font-size: 18px;
}

.amount.positive {
  color: var(--success-color);
}

.amount.negative {
  color: var(--error-color);
}

.settle-btn {
  background: var(--success-color);
  color: white;
  padding: 8px 16px;
  border: none;
  border-radius: 6px;
  cursor: pointer;
  margin-left: 15px;
  font-weight: 600;
  transition: all 0.3s ease;
}

.settle-btn:hover {
  background: #45A049;
  transform: translateY(-2px);
}

.no-balances {
  text-align: center;
  color: var(--text-tertiary);
  padding: 40px;
  font-size: 16px;
}

/* Utility Classes */
.loading {
  text-align: center;
  padding: 40px;
  color: var(--text-secondary);
  font-size: 16px;
}

.error {
  background: rgba(255, 107, 107, 0.1);
  color: var(--error-color);
  padding: 16px;
  border-radius: 8px;
  margin-bottom: 20px;
  border-left: 4px solid var(--error-color);
  font-weight: 500;
}

.logout-btn {
  display: none;
}

.form-actions {
  display: flex;
  gap: 12px;
}

.form-actions button {
  flex: 1;
}

.form-actions button[type="button"] {
  background: var(--text-secondary);
}

.form-actions button[type="button"]:hover {
  background: var(--text-primary);
}

/* Responsive Design */
@media (max-width: 1024px) {
  .dashboard-main {
    padding: 20px;
  }

  .groups-grid {
    grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
    gap: 16px;
  }
}

@media (max-width: 768px) {
  .dashboard-content {
    flex-direction: column;
  }

  .dashboard-main {
    padding: 16px;
  }

  .user-selection-container {
    padding: 24px;
  }

  .user-selection h1 {
    font-size: 24px;
  }

  .groups-grid {
    grid-template-columns: 1fr;
  }

  .balance-detail {
    grid-template-columns: 1fr;
    gap: 12px;
  }

  .net-balance .amount {
    font-size: 28px;
  }

  .group-list,
  .create-group,
  .add-expense,
  .expense-list,
  .balance-sheet {
    padding: 20px;
  }

  .balance-item {
    flex-direction: column;
    gap: 12px;
    align-items: flex-start;
  }

  .balance-info {
    width: 100%;
  }

  .settle-btn {
    width: 100%;
    margin-left: 0;
  }

  .split-row {
    flex-direction: column;
    gap: 8px;
    align-items: flex-start;
  }

  .split-row input {
    width: 100%;
  }
}

@media (max-width: 480px) {
  .user-selection-container {
    padding: 20px;
  }

  .dashboard-main {
    padding: 12px;
  }

  .group-list,
  .create-group,
  .add-expense,
  .expense-list,
  .balance-sheet {
    padding: 16px;
  }

  .group-list h2,
  .create-group h2,
  .add-expense h2,
  .expense-list h2,
  .balance-sheet h2 {
    font-size: 20px;
  }

  .expense-header {
    flex-direction: column;
    align-items: flex-start;
    gap: 8px;
  }
}

/* Custom Scrollbar */
::-webkit-scrollbar {
  width: 8px;
  height: 8px;
}

::-webkit-scrollbar-track {
  background: var(--bg-primary);
}

::-webkit-scrollbar-thumb {
  background: var(--border-color);
  border-radius: 4px;
}

::-webkit-scrollbar-thumb:hover {
  background: var(--text-tertiary);
}
